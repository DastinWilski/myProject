@model myProject.ViewModels.PlaylistViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Playlist</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.PlaylistName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PlaylistName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.myFiles)
        </dt>

        <dd>
          @foreach(var item in Model.myFiles)
          {
              if(item.Checked)
              {
                  <div>@item.Name</div>
              }
          }
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.PlaylistId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
